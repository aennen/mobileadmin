<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
    <title><%= title %></title>
    <link rel='stylesheet' href='./stylesheets/style.css'/>
    <link rel='stylesheet' href='./stylesheets/foundation.css'/>
</head>
<body>

<header>
    <% include ../partials/header %>
</header>

<h1><%= title %></h1>
<form action="" method="POST">
    <div style="margin-left:10px;padding-left: 10px">

        <div>
            <div class="scrollBox">
                <ul>

                    <% payload.forEach(function(pay) { %>
                    <ul><input name="<%= pay.login %>" id="<%= pay.login %>" type="checkbox" value="1"></input><label for="<%= pay.login %>"></label><%= pay.login %> </ul>
                    <% }); %>

                </ul>
            </div>

            <p></p>

            <!-- use button tag for on page actions -->
            <p align="left">

                <button type="submit" formaction="activeUser" class="button secondary" name="lock" value="1"><h5>Lock</h5></button>
                <button type="submit" formaction="emailUser" class="button secondary" name="email" value="1"><h5>Email</h5></button>
                <button type="submit" formaction="showUser" class="button secondary" name="show" value="1"><h5>Show</h5></button>
            </p>

        </div>
    </div>


</form>

</body>

<footer>
    <% include ../partials/footer %>
</footer>
</html>
